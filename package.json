{
  "name": "browserrc",
  "version": "1.0.0",
  "description": "A framework for creating browser extensions using a single JavaScript file",
  "type": "module",
  "main": "index.ts",
  "types": "index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    },
    "./jsx-runtime": {
      "types": "./jsx-runtime.d.ts",
      "import": "./jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./jsx-runtime.d.ts",
      "import": "./jsx-runtime.js"
    }
  },
  "files": [
    "index.ts",
    "jsx-runtime.js",
    "jsx-runtime.d.ts",
    "core/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "bun run node --test core/keyProcessor.test.js core/buildtime/code.test.js",
    "build": "bun -e \"console.log('✓ Package valid'); import('./index.ts').then(() => console.log('✓ Module builds successfully')).catch(err => { console.error('✗ Module build failed:', err.message); process.exit(1); });\""
  },
  "keywords": [
    "browser-extension",
    "framework",
    "javascript",
    "chrome-extension",
    "firefox-extension",
    "web-extension"
  ],
  "author": "Blake Smith <blakeinvictoria@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/browserrc/browserrc.git"
  },
  "bugs": {
    "url": "https://github.com/browserrc/browserrc/issues"
  },
  "homepage": "https://github.com/browserrc/browserrc",
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "@kitajs/html": "^4.2.11",
    "handlebars": "^4.7.8"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/chrome": "^0.1.32"
  }
}
